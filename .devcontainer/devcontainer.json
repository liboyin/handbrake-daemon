{
    "dockerComposeFile": "../docker-compose.dev.yaml",
    "service": "app",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2":{
            "configureZshAsDefaultShell": "true"
        }
    },
    "overrideCommand": true,
    "remoteUser": "ubuntu",
    "workspaceFolder": "/workspaces/handbrake-daemon",
    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/home/ubuntu/.ssh,type=tmpfs",
        "source=${localWorkspaceFolder},target=/workspaces/handbrake-daemon,type=bind"
    ],
    "postCreateCommand": "chmod +x .devcontainer/postCreateCommand.sh && ./.devcontainer/postCreateCommand.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "github.copilot",
                "github.copilot-chat",
                "mhutchie.git-graph",
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vscode.live-server",
                "ryu1kn.partial-diff",
                "saoudrizwan.claude-dev",
                "streetsidesoftware.code-spell-checker",
                "tamasfe.even-better-toml",
                "visualstudioexptteam.intellicode-api-usage-examples",
                "visualstudioexptteam.vscodeintellicode"
            ]
        }
    }
}
